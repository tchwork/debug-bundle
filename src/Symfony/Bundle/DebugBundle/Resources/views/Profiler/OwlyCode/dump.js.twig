                    output = new VarDump.PhpArray(data, buildData);
                } else if (identifier[1] == 'resource') {
                    output = new VarDump.PhpResource(data, buildData);
                } else {
                    output = new VarDump.PhpObject(data, buildData);
                }
            } else {
                output = new VarDump.PhpScalar(data, buildData);
            }

            if (!ignoreCount) {
                output.index = index;
            }

            return output;
