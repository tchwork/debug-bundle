            value = value.substr(position + 2, value.length);
        }

        __self.attrs = new VarDump.ChildrenContainer(data, buildData);

        __self.count = function() {
            return __self.attrs.count();
        }
    };

    VarDump.PhpResource = function (data, buildData)
    {
        var __self = this;

        var meta = data._.split(':');
        __self.traversable = true;
        __self.type = meta[2];
        __self.cutBy = data.__cutBy;
        __self.attrs = new VarDump.ChildrenContainer(data, buildData, 'resource');
    }

    VarDump.PhpAttribute = function (key, value)
    {
        var __self = this;
        __self.traversable = false;

